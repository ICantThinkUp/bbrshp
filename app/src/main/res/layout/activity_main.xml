<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/employeeNavButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/squere_button"
        android:text="Учет сотрудников"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/customersNavButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_image"
        />

    <Button
        android:id="@+id/servicesNavButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/squere_button"
        android:text="Услуги"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/historyNavButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customersNavButton" />

    <Button
        android:id="@+id/historyNavButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/squere_button"
        android:text="История"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/bg_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/servicesNavButton" />

    <Button
        android:id="@+id/customersNavButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/squere_button"
        android:text="Учет посетителей"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/servicesNavButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employeeNavButton" />

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="396dp"
        android:layout_height="617dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg"
        tools:srcCompat="@drawable/bg_image" />

</androidx.constraintlayout.widget.ConstraintLayout>